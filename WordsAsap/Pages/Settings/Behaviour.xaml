<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:local="clr-namespace:WordsAsap.Pages.Settings" x:Class="WordsAsap.Pages.Settings.Behaviour" 
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             >
    <UserControl.DataContext>
        <local:BehaviourViewModel/>
    </UserControl.DataContext>
    <Grid>

        <StackPanel x:Name="Panel" MinWidth="150">
            <TextBlock Text="USER OPTIONS" Style="{StaticResource Heading2}" Margin="0,0,0,8" FontFamily="Comic Sans MS" />
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock  VerticalAlignment="Center" Margin="2,0,5,0">
                    <Run Text="time interval for word dialog:" FontFamily="Segoe UI Light"/>
                      <LineBreak />
                    <Run Text="[in minutes]"  FontFamily="Segoe UI Semibold" FontWeight="Bold"/>
                </TextBlock>
                <TextBox Width="40" Height="22" Padding="1" Text="{Binding WordDialogShowInterval}" BorderThickness="0" TextAlignment="Right"/>
                <StackPanel>
                    <mui:ModernButton Command="{Binding UpCommand}"  IconData="F1 M 37.8516,35.625L 34.6849,38.7917L 23.6016,50.2708L 23.6016,39.9792L 37.8516,24.9375L 52.1016,39.9792L 52.1016,50.2708L 41.0182,38.7917L 37.8516,35.625 Z" />
                    <mui:ModernButton Command="{Binding DownCommand}" IconData="F1 M 37.8516,39.5833L 52.1016,24.9375L 52.1016,35.2292L 37.8516,50.2708L 23.6016,35.2292L 23.6016,24.9375L 37.8516,39.5833 Z "/>
                </StackPanel>                
            </StackPanel>
            <mui:ModernButton Padding="10" Margin="20" Content="save settings" 
                                      Command="{Binding SaveSettingsCommand}"
                                      IconData="F1 M 20.5833,20.5833L 55.4167,20.5833L 55.4167,55.4167L 45.9167,55.4167L 45.9167,44.3333L 30.0833,44.3333L 30.0833,55.4167L 20.5833,55.4167L 20.5833,20.5833 Z M 33.25,55.4167L 33.25,50.6667L 39.5833,50.6667L 39.5833,55.4167L 33.25,55.4167 Z M 26.9167,23.75L 26.9167,33.25L 49.0833,33.25L 49.0833,23.75L 26.9167,23.75 Z" 
                                       />
        </StackPanel>
    </Grid>
</UserControl>
